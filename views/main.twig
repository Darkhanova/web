{% extends "__layout.twig" %}
{% from "forms.twig" import btn as btn_link %}

{% block content %}
	<div class="row d-flex">
		{% for object in cats %}
			<div class="col-xl-4 col-md-6 col-sm-12 d-flex">
				<div class="card text-center flex-grow-1">
					<div class="position-absolute" style="right: 4px; top: 4 px">
						<form action="/cats_objects/{{ object.id }}/delete" method="POST">
							<input type="hidden" name="id" value="{{ object.id }}">
							<button type="submit" class="btn btn-danger">
								<i class="fas fa-times"></i>
							</button>
						</form>
					</div>
					<div class="position-absolute" style="left: 4px; top: 4 px">
						<form action="/cats_objects/{{ object.id }}/update" method="GET">
							<input type="hidden" name="id" value="{{ object.id }}">
							<button type="submit" class="btn btn-warning">
								<i class="fa-solid fa-pen-to-square"></i>
							</button>
						</form>
					</div>
					<div class="h-75">
						<img class="card-img-top h-100" src="{{ object.image }}" alt="">
					</div>
					<div class="card-body">
						{{ btn_link(object.title, "/cats_objects/" ~ object.id, "w-100", true) }}
						{{ btn_link("Картинка", "/cats_objects/" ~ object.id ~ "?show=image") }}
						{{ btn_link("Описание", "/cats_objects/" ~ object.id ~ "?show=info") }}
					</div>
				</div>
			</div>

		{% endfor %}
	</div>
{% endblock %}
